#!/usr/bin/env coffee

clover = require '../main'
fs = require 'fs'

# TODO : implement a cli

if process.argv.length > 2
  filename = process.argv[2]
  code = fs.readFileSync filename, 'utf8'

  node = clover.parser.parse(code)
  # node.dump()

  node.execute()
else
  console.log "usage:\nclover SCRIPT_FILENAME"